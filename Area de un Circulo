#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main ()
{
	double r, p=3.14159, a;
	cout<<"introduzca el radio:";
	cin>>r;
	a=r*r*p;
	cout<<"este es su area "<<a;
	getch();
}


//////////////////////////////////////////////////////////////////////

Algoritmo sin_titulo
	escribir 'introduzca el radio'
	leer r
	a=r*r*3.14159
	escribir 'este es area de su circulo:', a
FinAlgoritmo
