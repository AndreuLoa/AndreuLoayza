		cin>>b;
	b=b+a;
	cout<<"introduzca el tercer valor:";
		cin>>a;
	b=b+a;
	cout<<"introduzca el cuarto valor:";
		cin>>a;
	b=b+a;
	cout<<"introduzca el quinto valor:";
		cin>>a;
	b=b+a;
	a=b/5;
	cout<<"este es su promedio:"<<a;
